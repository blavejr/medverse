{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions,firestore",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:firestore:rules": "firebase deploy --only firestore:indexes,firestore:rules",
    "logs": "firebase functions:log",
    "test": "jest --watchman=false",
    "test:watch": "jest --watch --watchman=false",
    "test:coverage": "jest --coverage --watchman=false",
    "test:unit": "jest --testPathIgnorePatterns=integration --watchman=false",
    "test:integration": "RUN_INTEGRATION=true GCLOUD_PROJECT=demo-test GOOGLE_CLOUD_PROJECT=demo-test FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 jest --testPathPattern=integration --runInBand --watchman=false"
  },
  "engines": {
    "node": "24"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "graphql": "^16.12.0",
    "jsonwebtoken": "^9.0.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.4.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.3"
  },
  "private": true
}
