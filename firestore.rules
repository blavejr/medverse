rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Sessions collection - All access via Cloud Functions only
    match /sessions/{sessionId} {
      // For now: No direct client access
      // All operations must go through Cloud Functions
      allow read, write: if false;
      
      // Optional: If you add Firebase Auth later, uncomment this:
      // allow read: if request.auth != null;
      // allow write: if false; // Still enforce writes via Cloud Functions
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
